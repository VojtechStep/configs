[spotify]
command=~/.config/i3blocks/spotify-track
interval=once
signal=3

[volume-pulseaudio]
command=~/Projects/i3blocks-contrib/volume-pulseaudio/volume-pulseaudio -F "🔉 \${VOL}% "
interval=once
signal=1

[brightness]
command=echo "$(cat ~/.brightness) * 100/1" | bc | awk '{ print "☀️ "$0"% " }'
interval=once
signal=4

[separator]

[keyboard-layout]
command=xkblayout-state print " %s " | tr [a-z] [A-Z]
interval=once
signal=2

[essid]
command=~/.config/i3blocks/essid
interval=30

[separator]

[battery2]
command=~/Projects/i3blocks-contrib/battery2/battery2
markup=pango
interval=30

[separator]

[time]
command=date '+%H:%M'
interval=5
